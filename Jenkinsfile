pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
                echo 'Code already cloned by Jenkins.'
            }
        }
        stage('Build') {
            steps {
                echo 'Building the project...'
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
            }
        }
    }
}
